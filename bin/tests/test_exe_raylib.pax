module exe test_raylib;

import raylib;

#modulepath 'libs/raylib/src'

const
  CScreenWidth = 800;
  CScreenHeight = 450;

begin
  raylib.InitWindow(CScreenWidth, CScreenHeight, 'raylib [core] example - basic window');
  

  raylib.SetTargetFPS(60);
  
  while not raylib.WindowShouldClose() do
    raylib.BeginDrawing();
      raylib.ClearBackground(raylib.RAYWHITE);
      raylib.DrawText('Congrats! You created your first window!', 190, 200, 20, raylib.LIGHTGRAY);
    raylib.EndDrawing();
  end;

  
  raylib.CloseWindow();
end.