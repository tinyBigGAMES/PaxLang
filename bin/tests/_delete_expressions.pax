module exe expressions;

// Test arithmetic and comparison expressions

var
  a: int32;
  b: int32;
  c: int32;
  d: int64;
  f1: float32;
  f2: float64;
  ok: boolean;

begin
  // Integer arithmetic
  a := 10;
  b := 3;
  c := a + b;      // 13
  c := a - b;      // 7
  c := a * b;      // 30
  c := a div b;    // 3
  c := a mod b;    // 1
  
  // Unary operators
  c := -a;         // -10
  c := +a;         // 10
  
  // Parentheses
  c := (a + b) * 2;  // 26
  
  // Larger integers
  d := 1000000000;
  d := d * 10;
  
  // Float arithmetic
  f1 := 3.14;
  f2 := 2.71828;
  f2 := f1 + 1.0;
  f2 := f1 * 2.0;
  f2 := f1 / 2.0;
  
  // Comparison operators
  ok := a = 10;     // true
  ok := a <> b;     // true
  ok := a < b;      // false
  ok := a > b;      // true
  ok := a <= 10;    // true
  ok := a >= 10;    // true
  
  // Logical operators
  ok := true and true;    // true
  ok := true and false;   // false
  ok := true or false;    // true
  ok := not false;        // true
  ok := (a > 5) and (b < 10);  // true
  
  // Hex literals
  c := $FF;         // 255
  c := $DEADBEEF;   // large hex
  
end.
